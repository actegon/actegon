<div class="wrapper">
  <div class="fans">
    <div class="fan">
      <img src="/apps/wallit/screenshots/image-0.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-1.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-2.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-3.png" alt="card" />
    </div>
    <div class="heading">
      <h1>Wallit</h1>
      <p>All your cards in your in your virtual wallet</p>
      <a
        href="https://apps.apple.com/us/app/wallit-no-more-plastic-cards/id1580440106"
        target="_blank"
        rel="noreferrer"
      >
        <img
          src="https://developer.apple.com/app-store/marketing/guidelines/images/badge-example-alternate_2x.png"
          alt="App Store Logo"
        />
        <img
          src="https://developer.apple.com/app-store/marketing/guidelines/images/badge-example-preferred_2x.png"
          alt="App Store Logo - Dark"
          class="dark"
        />
      </a>
    </div>
    <div class="fan right">
      <img src="/apps/wallit/screenshots/image-4.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-5.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-6.png" alt="card" />
      <img src="/apps/wallit/screenshots/image-7.png" alt="card" />
    </div>
  </div>
</div>

<style lang="scss">
  div.wrapper {
    font-family: inherit;
    margin-bottom: 96px;
    div.heading {
      text-align: center;
      margin-block: 96px;
      h1 {
        font-size: 64px;
        margin: 0;
        font-weight: 800;
        margin-bottom: 12px;
      }
      p {
        font-size: 14px;
        font-weight: 500;
        margin: 0;
        opacity: 0.8;
        text-transform: uppercase;
        max-width: 320px;
      }
      a {
        margin-top: 64px;
        display: block;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: 120ms;
        &:hover {
          transform: scale(1.05);
          img.dark {
            opacity: 1;
          }
        }
        &:active {
          transform: scale(0.95);
        }
        img {
          height: 40px;
          transition: 120ms;
          &.dark {
            position: absolute;
            opacity: 0;
            // left: 0;
            // top: 0;
            // bottom: 0;
            // right: 0;
          }
        }
      }
    }
    div.fans {
      display: flex;
      justify-content: space-between;
      padding-inline: 64px;
      width: 100%;
      max-width: var(--max-width);
      @media screen and (min-width: 1200px) {
        max-width: 960px;
      }
      margin: auto;
      align-items: center;
      div.fan {
        width: 64px;
        height: 64px;
        position: relative;
        z-index: 1;
        &.right {
          img {
            right: 0;
            left: unset;
            transform-origin: 90% 90%;
            @for $i from 1 through 4 {
              &:nth-child(#{$i}) {
                z-index: #{10 - $i};
              }
            }
          }
        }
        img {
          width: 128px;
          display: block;
          position: absolute;
          transform-origin: 10% 90%;
          transition: 320ms;
          left: 0;
          @for $i from 1 through 4 {
            &:nth-child(#{$i}) {
              transform: rotate(calc(#{$i} * 20deg - 50deg));
              // background-color: lighten($base-color, $i * 5%);
            }
          }
        }
        &:hover {
          img {
            @for $i from 1 through 4 {
              &:nth-child(#{$i}) {
                transform: rotate(calc(#{$i} * 30deg - 70deg));
                // background-color: lighten($base-color, $i * 5%);
              }
            }
          }
        }
      }
    }
  }
</style>
