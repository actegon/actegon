---
type Straps = [string[], string[]];
const imageList = new Array(8).fill(null);
const images = imageList.map((_, i) => {
  return `/apps/wallit/screenshots/image-${i}.png`;
});

const straps = images.reduce(
  (acc, image, i) => {
    acc[i % 2].push(image);
    return acc;
  },
  [[], []] as Straps
);

